{
    "name": "playground/amphp-echo-server",
    "description": "Simple echo server using amphp",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "amphp/http-server": "^3.0",
        "amphp/socket": "^2.0",
        "amphp/byte-stream": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "amphp/http-client": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}